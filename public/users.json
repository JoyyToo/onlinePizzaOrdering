      "operations": [
        {
          "summary": "Reset Password",
          "parameters": [
            {
              "paramType": "form",
              "name": "email",
              "type": "string",
              "description": "User Email",
              "required": true
            }
          ],
          "responseMessages": [
            {
              "code": 400,
              "responseModel": null,
              "message": "Bad Request"
            }
          ],
          "nickname": "Users#forgot_password",
          "method": "post"
