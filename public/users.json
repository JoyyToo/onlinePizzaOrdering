          "summary": "Change Password",
          "parameters": [
            {
              "paramType": "form",
              "name": "password",
              "type": "string",
              "description": "New Password",
              "required": true
            }
          ],
          "responseMessages": [
            {
              "code": 401,
              "responseModel": null,
              "message": "Unauthorized"
            }
          ],
          "nickname": "Users#change_password",
          "method": "post"
        }
      ]
    },
    {
      "path": "/activate_account",
      "operations": [
        {
          "summary": "Activate your Account",
          "parameters": [
            {
              "paramType": "form",
              "name": "token",
              "type": "varchar",
              "description": "Token in email",
              "required": true
            }
          ],
          "responseMessages": [
            {
              "code": 400,
              "responseModel": null,
              "message": "Bad Request"
            }
          ],
          "nickname": "Users#activate_account",
          "method": "post"
        }
      ]
    },
    {
